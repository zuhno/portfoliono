{
  "name": "portfolio",
  "private": true,
  "scripts": {
    "2019": "cd apps/2019 && pnpm",
    "2023": "cd apps/2023 && pnpm",
    "clean": "rm -rf node_modules && rm -rf */**/node_modules",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write ."
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "^1.10.16"
  },
  "packageManager": "pnpm@8.7.6",
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
